doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    //-Bootstap
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", rel="stylesheet",
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")
    title PUG

nav(class="navbar bg-light")
  form(class="container-fluid justify-content-center") 
    a(href="/" class="btn btn-sm btn-outline-secondary me-2") Form
    a(href="/productos" class="btn btn-sm btn-outline-secondary") Productos

body 
    div(class="container mt-5")
        div(class="jumbotron shadow p-3 mb-5 bg-body rounded")
            h2(style="color:#dc143c;") Historial
            if products.length > 0
                div(class="table-responsive")
                    table(class="table table-dark")
                        tr(style="color: yellow;")
                            th Nombre
                            th Precio
                            th Foto

                        for product of products 
                            tr
                                td= product.nombre
                                td= product.precio
                                td 
                                    img(src=`${product.foto}`, alt=`${product.name}`)

            else 
                h3(class="alert alert-danger") No se encontraron datos
       
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3", crossorigin="anonymous")