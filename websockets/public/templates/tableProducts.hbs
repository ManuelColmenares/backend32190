{{!-- Tabla de Productos --}}
<div>
    <h2 style="color:#3677f0;">Vista de Productos</h2>

    {{#if products }}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                {{#each products }}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{precio}}</td>
                    <td><img src="{{foto}}" alt="{{nombre}}"></td>
                </tr>
                {{/each}}
            </table>
        </div>
    {{else}}
        <h3 class="alert alert-danger">no se encontraron datos</h3>
    {{/if}}
</div>